<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>netcore-desktop</PackageId>
    <PackageVersion>0.1.3</PackageVersion>
    <Title>net core desktop</Title>
    <Description></Description>
    <LangVersion>8</LangVersion>
    <Authors>Lorenzo Delana</Authors>
    <PackageTags>netcore desktop avalonia</PackageTags>
    <PackageProjectUrl>https://github.com/devel0/netcore-desktop#netcore-desktop</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <noWarn>1591</noWarn>
  </PropertyGroup>
  <ItemGroup>    
    <PackageReference Include="Avalonia" Version="0.10.0-preview2" />
    <PackageReference Include="Avalonia.Desktop" Version="0.10.0-preview2" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.10.0-preview2" />
    <PackageReference Include="netcore-util" Version="1.6.2" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Controls\" />
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>  
</Project>